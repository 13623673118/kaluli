page{
    background: #f6f6f7;
}
.header{
    background: #fdfdff;
    margin-bottom: 18rpx;
}
.floor{
    display: flex;
    display: -webkit-flex;
    justify-content: space-between;
    -webkit-justify-content: space-between;
    padding:0 23rpx;
}
.name{
    height:100rpx;
    width:100%;
    border-bottom: 2rpx solid #f6f6f7;
    font-size: 30rpx;
    line-height: 98rpx;
}
.name text:last-child{
    font-size: 24rpx;
    color: #ff3000;
    line-height: 98rpx;
}
.number{
    height:100rpx;
    border-bottom: 2rpx solid #f6f6f7;    
}
.number .name{
    color:#a0a0a0;
}
.number .length{
    width:172rpx;
    height:52rpx;
    display: flex;
    display: -webkit-flex;
    justify-content: space-between;
    -webkit-justify-content: space-between;
    border:1rpx solid #dddddd;
    margin-top: 24rpx;
}
.number .length view{
    width:50rpx;
    background: #dddddd;
    color: #222222;
    font-size: 30rpx;
    line-height: 50rpx;
    text-align: center;
}
.number .length view:nth-child(2n){
    width:70rpx;
    background: #ffffff;
    font-size: 20rpx; 
}
.total{
     height:100rpx;
}
.total text{
    line-height: 100rpx;
}
.total text:last-child{
    color: #ff3000
}
.msg{
    background: #fdfdff;
}
.msg .desc{
    font-size: 28rpx;
    padding:35rpx 0;
    line-height: 1.5;
    color: #a0a0a0;
    border-bottom: 2px solid #f6f6f7; 
    padding-left: 23rpx;
    background:linear-gradient(#6c7eff,#6c7eff);
    background-size: 15rpx 15rpx;
    background-position: left top 50rpx;
    background-repeat:no-repeat; 
}
.msg .bg{
    position: absolute;
    width:100%;
    height:100%;
    color: #a0a0a0;
    /*z-index: -1;*/
    top:0;
    left:0;
    font-size: 28rpx;
    padding-left: 23rpx;
    line-height: 90rpx;
    text-align: left;
}
.msg .phone,.msg .name,.msg .time,.msg .sex{
height:90rpx;
padding:0 23rpx;
line-height: 90rpx;
text-align: right;
color:#222222;
font-size: 30rpx;
}

.msg input{
    position: absolute;
    top:0;
    left:0;
    width:100%;
    height: 100%;
    z-index: 9999;
    padding-right: 20rpx;
    box-sizing: border-box;
    color:#222222;
    
}
.placeholder{
    font-family: "微软雅黑";
}

.picker{
    height:90rpx;
}
.option-l{
    float: left;
    color:#a0a0a0;
}
.option-r{
    float: right;
}

.section{
    display: flex;
    display: -webkit-flex;
}
.section .v{
    width:200rpx;
    font-size:28rpx;
    color:#a0a0a0;
    text-align: left;
}
.section picker{
    width:100%;
}








/*弹出层*/
.mask{
    position: fixed;
    top:0;
    left:0;
    width:100%;
    height:100%;
    z-index: 9999999;
    background: #EDEDF2;
}
.mask .msg{
    height:70rpx;
    line-height: 70rpx;
    display: flex;
    display: -webkit-flex;
    padding:0 25rpx;
}
.mask .msg text{
    color:#777;
    font-size: 24rpx;
    margin-right: 23rpx;
}
.mask .msg input{
    height:100%;
    font-size: 24rpx;
    color:#222;
    line-height: 70rpx;
}
.mask .close{
    width:700rpx;
    height:70rpx;
    background:#30324A;
    margin: 30rpx auto 0;
    color:#ffdb08;
    text-align: center;
    font-size: 30rpx;
    line-height: 70rpx;
    letter-spacing: .2em;
}




.applybox{
    position: fixed;
    bottom:0;
    left:0;
    z-index: 999;
    width:100%;
    height:100rpx;
    padding-left: 20rpx;
    background: #30314a;
    color: #ffdb08;
    font-size: 20rpx;
    line-height: 100rpx;
    box-shadow: 0 0 10px rgba(0,0,0,0.6) ;
    
}
.applybox text{
    font-size: 36rpx;
    line-height: 100rpx;
}
.apply{
    position: absolute;
    right: 0;
    top:0;
    width:240rpx;
    height:100%;
    color: #000000;
    font-size: 30rpx;
    line-height: 100rpx;
    text-align: center;
    background: linear-gradient(90deg,#ffdb08,#ffb307);
}
