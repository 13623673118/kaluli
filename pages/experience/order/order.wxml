<view class="msg">
  <view class="desc">个人信息(您的个人信息我们会严格保密哦，只用于和您确认训练安排使用)</view>
  <view class="phone">
    <view class="bg">手机号码</view>
    <input type="number" value="{{mobile}}" maxlength="11" placeholder="请输入手机号" placeholder-class="placeholder" bindblur="getTel" />
  </view>
  <view class="name">
    <view class="bg">姓名</view>
    <input type="text" value="{{realname}}" maxlength="11" placeholder="请输入真实姓名"  placeholder-class="placeholder" bindblur="getName"/>
  </view>
  <view class="sex section" style="  justify-content: space-between;" bindtap="changeSex">
     <text  class="option-l">性别</text>
     <text  class="option-r">{{sex}}</text>
  </view>
</view>
