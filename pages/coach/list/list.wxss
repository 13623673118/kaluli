/* pages/coach/coach.wxss */

page {
    background: #222235;
}

text {
    color: #777;
}

.scroll_view {
    width: 100%;
    padding: 0 20rpx 30rpx;
    box-sizing: border-box;
}

.course_item {
    width: 100%;
    height: 300rpx;
    margin-top: 24rpx;
    display: flex;
    justify-content: space-between;
    background: #fff;
}

.course_item .coach_img {
    width: 346rpx;
    height: 100%;
    position: relative;
}

.course_item .main_img {
    height: 100%;
    width: 100%;
    position: absolute;
    z-index: 1;
    top: 0;
    left: 0;
}

.course_item .coach_img .coach_js {
    width: 100%;
    position: absolute;
    text-align: center;
    bottom: 11rpx;
    z-index: 4;
}

.course_item .coach_img text {
    font-size: 20rpx;
    color: #333;
    display: inline-block;
    background: #ffe200;
    height: 40rpx;
    line-height: 40rpx;
    padding: 0 26rpx;
    border-radius: 23rpx;
}

.course_item .course_mes {
    position: relative;
    width: 364rpx;
    height: 100%;
    padding: 32rpx 23rpx 0 23rpx;
    font-size: 0;
    text-align: justify;
    overflow: hidden;
}

.course_mes .name {
    position: relative;
    font-size: 32rpx;
    color: #222;
    margin-bottom: 16rpx;
}

.course_mes .name image {
    position: absolute;
    top: 0;
    bottom: 0;
    margin: auto 0;
    width: 120rpx;
    height: 32rpx;
    margin-left: 18rpx;
}

.lable {
    display: inline-block;
    padding: 0 8rpx;
    height: 39rpx;
    text-align: center;
    line-height: 39rpx;
    font-size: 23rpx;
    border: 1rpx solid #dcdddd;
    color: #777;
    border-radius: 6rpx;
    margin-right: 8rpx;
    margin-bottom: 10rpx;
}

.triangle {
    position: absolute;
    bottom: -36rpx;
    right: -36rpx;
    width: 70rpx;
    height: 70rpx;
    background: linear-gradient(90deg, #f8f8fa, #727178, #727178);
    transform: rotate(45deg);
}

#more {
    position: absolute;
    bottom: 14rpx;
    display: flex;
    justify-content: flex-start;
    line-height: 46rpx;
}

#more text {
    color: #2c2e47;
    font-size: 22rpx;
}

#more image {
    width: 36rpx;
    height: 46rpx;
}
