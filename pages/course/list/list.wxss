/* pages/course/course.wxss */
page{
 width:100%;
  background: #222235;
  padding:0 20rpx 30rpx;
  box-sizing: border-box;
}
text{
  color:#777777;
}
.course_item{
  width:100%;
  height:300rpx;
  margin-top:24rpx;
  display: flex;
  justify-content: space-between;
  background: #fff;
}
.course_item .main_img{
  height:100%;
  width:346rpx;
}
.course_item .course_mes{
  position: relative;
  width:364rpx;
  height:100%;
  padding:32rpx 23rpx 0 23rpx;
  font-size: 0;
  text-align: justify;
  overflow: hidden;
}
.course_mes .title{
  font-size: 32rpx;
  color:#222222;
  display: block;
  margin-bottom: 16rpx;
}
.course_mes .mian-mes{
  line-height: 32rpx;
}
#more{
  position: absolute;
  bottom:20rpx;
  display: flex;
  justify-content: flex-start;
  line-height: 46rpx;
}
#more text{
  color:#2c2e47;
  font-size: 22rpx;
}
#more image{
  width:36rpx;
  height:46rpx;
}
.triangle{
  position: absolute;
  bottom:-36rpx;right:-36rpx;
  width:70rpx;
  height:70rpx;
  background: linear-gradient(90deg,#f8f8fa,#727178,#727178);
  transform: rotate(45deg);
}